<!--pages/category/category.wxml-->
<view>
  <scroll-view scroll-x="true" class="tab" scroll-left="{{scrollLeft}}">
    <block wx:for="{{category}}">
      <view class="{{item.isSelect?'category-item--selected':'category-item'}}" hover-class="item-hover" data-category-id="{{item.id}}" bindtap="switchTab">
        {{item.text}}
      </view>
    </block>
  </scroll-view>

  <view>
    <mp-cells>
      <block wx:for="{{projects}}">
        <mp-cell link hover value="{{item.title}}" footer="{{item.budget}}" ext-class="cell-height" data-project-id="{{item.projectId}}" bindtap="viewProjectDetail">
        </mp-cell>
      </block>
    </mp-cells>
  </view>
</view>