<!--pages/category/category.wxml-->
<view>
  <scroll-view scroll-x="true" class="tab">
    <view wx:for="{{category}}" class="{{item.isSelect?'category-item--selected':'category-item'}}" hover-class="item-hover">
      {{item.text}}
    </view>
  </scroll-view>

  <view>
    <mp-cells>
      <mp-cell link hover value="项目名称" footer="预算" ext-class="cell-height">
      </mp-cell>
      <mp-cell link hover value="无hover效果" footer="说明文字">
      </mp-cell>
      <mp-cell link hover value="无hover效果，带跳转URL" footer="说明文字">
      </mp-cell>
    </mp-cells>
  </view>
</view>