/* pages/project-detail/project-detail.wxss */

.contain {
  padding: 25rpx 0;
  font-size: 28rpx;
}

.project-title {
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx 25rpx;
}

.project-name {
  width: 400rpx;
  color: #333;
  font-size: 17px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.project-due {
  display: flex;
  color: #e52a23;
  font-size: 14px;
}

.project-info {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 0 50rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  padding: 20rpx 0;
  background-color: #f9f9fa;
  color: #999;
  font-size: 12px;
}

.project-content {
  color: #666;
  font-size: 26rpx;
  line-height: 48rpx;
  padding: 20rpx 0 48rpx;
}
